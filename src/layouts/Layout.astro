---
interface Props {
  title: string;
}

const { title } = Astro.props;

const description = "Personal homepage of Anne Young, writer";
const keywords = [
  "writing",
  "english",
  "history",
  "literature",
  "true crime",
  "pop culture",
  "nineteenth-century",
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Source+Sans+3:wght@300;400;500&display=swap" rel="stylesheet">

    <meta name="description" content={description} />
    <meta name="od:description" content={description} />
    <meta name="keywords" content={keywords.join(",")} />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    /* Refined Color Palette */
    --accent: 51, 51, 51; /* Dark grey for primary text */
    --accent-light: 102, 102, 102; /* Medium grey for secondary text */
    --accent-dark: 0, 0, 0; /* Black for hover states */
    --background: 250, 250, 250; /* Light grey background */
    --link: 70, 87, 117; /* Sophisticated navy blue for links */
    
    /* Typography Scale */
    --font-heading: 'Playfair Display', Georgia, serif;
    --font-body: 'Source Sans 3', system-ui, sans-serif;
  }
  
  html {
    font-family: var(--font-body);
    background: rgb(var(--background));
    color: rgb(var(--accent));
    line-height: 1.6;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
  }

  p {
    margin: 0;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    html {
      font-size: 15px;
    }
  }
</style>

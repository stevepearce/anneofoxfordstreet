---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="Research Projects and Publications">
  <Navigation />
  <main>
    <div class="content">
      <header>
        <h1>Anne Young</h1>
        <h2 class="subtitle">Research Projects and Publications</h2>
      </header>

      <section class="section" aria-labelledby="forthcoming-heading">
        <h2 id="forthcoming-heading">Forthcoming</h2>
        <ul class="project-list">
          <li class="project-item">
            <em>Routledge Companion to Horror Studies</em> chapter, &ldquo;Feminist and Post-Feminist Horror and Theory&rdquo;
          </li>
        </ul>
      </section>

      <section class="section" aria-labelledby="past-heading">
        <h2 id="past-heading">Past Projects</h2>
        <ul class="project-list">
          <li class="project-item">
            Introduction to DVD reissue of <em>Model Hunger</em>
          </li>
          <li class="project-item">
            Podcast scriptwriting for <em>Murder She Told</em>
          </li>
          <li class="project-item">
            Miskatonic Institute of Horror Studies lecture, &ldquo;The Screams of His Poor Bride&rdquo;
          </li>
          <li class="project-item">
            &ldquo;Seeing Red from the Depths: Daria Nicolodi&rsquo;s Secret Revenge&rdquo;
          </li>
          <li class="project-item">
            Profile of filmmaker Debbie Rochon
          </li>
        </ul>
      </section>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    padding: 4rem 2rem 2rem;
  }

  .content {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }

  header {
    margin-bottom: 3rem;
    text-align: center;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: rgb(var(--accent));
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.8rem;
    color: rgb(var(--accent-light));
    margin: 0 0 2rem;
    font-weight: 500;
  }

  .section {
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 1.8rem;
    color: rgb(var(--accent));
    margin: 2rem 0 1rem;
  }

  .section:first-of-type h2 {
    margin-top: 0;
  }

  .project-list {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0;
  }

  .project-item {
    margin-bottom: 1.25rem;
    line-height: 1.6;
    color: rgb(var(--accent-dark));
  }

  .project-item em {
    font-style: italic;
  }
</style>

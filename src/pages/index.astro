---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import headshot from "../assets/anne3.jpg";
import { Book, Mail } from "lucide-astro";
---

<Layout title="Anne Young">
  <main>
    <div class="content">
      <header>
        <h1>Anne Young</h1>
      </header>

      <section class="profile">
        <div class="image-container">
          <Image
            src={headshot}
            alt="Anne Young"
            class="headshot"
            width={240}
            height={240}
            loading="eager"
            decoding="sync"
            densities={[1, 2]}
            format="webp"
          />
        </div>
        <p class="bio">
          Anne Young is a Canadian freelance writer. She writes and speaks about
          horror and gothic media, true crime, and feminism. She holds a PhD in
          English literature, with specialization in 19th-century British
          literature.
        </p>
      </section>

      <nav class="links" aria-label="Main navigation">
        <a href="https://anneofoxfordstreet.blogspot.com" class="link">
          <Book class="icon" size={16} aria-hidden="true" />
          <span>Blog</span>
        </a>
        <a href="mailto:anneofoxfordstreet@gmail.com" class="link">
          <Mail class="icon" size={16} aria-hidden="true" />
          <span>anneofoxfordstreet@gmail.com</span>
        </a>
      </nav>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .content {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    animation: fadeIn 0.8s ease-out;
  }

  header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 0.5rem;
    color: rgb(var(--accent));
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1.2rem;
    color: rgb(var(--accent-light));
    margin: 0.5rem 0 1.5rem;
    line-height: 1.4;
  }

  .bio {
    max-width: 500px;
    margin: 1.5rem auto;
    line-height: 1.6;
    color: rgb(var(--accent-dark));
    font-size: 1.1rem;
    text-align: left;
  }

  .profile {
    margin-bottom: 2rem;
  }

  .image-container {
    margin-bottom: 2rem;
    display: inline-block;
  }

  .headshot {
    width: 240px;
    height: 240px;
    object-fit: cover;
    border-radius: 12px;
    filter: contrast(1.05);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: rgb(var(--accent));
    font-size: 1.1rem;
    transition: all 0.2s ease;
  }

  .link:hover {
    color: rgb(var(--accent-light));
    transform: translateX(2px);
  }

  .icon {
    color: currentColor;
    opacity: 0.9;
  }

  .icon {
    color: currentColor;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    main {
      padding: 1.5rem;
    }

    .headshot {
      width: 200px;
      height: 200px;
    }

    .content {
      max-width: 100%;
    }
  }
</style>

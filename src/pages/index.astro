---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import headshot from "../assets/anne3.jpg";
import { Book, Mail } from "lucide-astro";
---

<Layout title="Anne Young">
  <main>
    <div class="content">
      <header>
        <h1>Anne Young</h1>
      </header>
      
      <section class="profile">
        <div class="image-container">
          <Image
            src={headshot}
            alt="Anne Young"
            class="headshot"
            width={240}
            height={240}
            loading="eager"
            decoding="sync"
          />
        </div>
      </section>

      <nav class="links" aria-label="Main navigation">
        <a href="https://anneofoxfordstreet.blogspot.com" class="link-item">
          <Book class="icon" size={20} aria-hidden="true" />
          <span class="link-text">Blog</span>
        </a>
        <a href="mailto:anneofoxfordstreet@gmail.com" class="link-item">
          <Mail class="icon" size={20} aria-hidden="true" />
          <span class="link-text">Contact</span>
        </a>
      </nav>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .content {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    animation: fadeIn 0.8s ease-out;
  }

  header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 0.5rem;
    color: rgb(var(--accent));
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1.2rem;
    color: rgb(var(--accent-light));
    margin: 0.5rem 0 1.5rem;
    line-height: 1.4;
  }

  .bio {
    max-width: 500px;
    margin: 1.5rem auto;
    line-height: 1.6;
    color: rgb(var(--accent-dark));
    font-size: 1.1rem;
  }

  .profile {
    margin-bottom: 2rem;
  }

  .image-container {
    margin-bottom: 2rem;
    display: inline-block;
  }

  .headshot {
    width: 240px;
    height: 240px;
    object-fit: cover;
    border-radius: 10px;
    filter: contrast(1.05);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .link-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border: 1px solid rgba(var(--accent), 0.1);
    border-radius: 8px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.5);
    color: rgb(var(--link));
  }

  .link-item:hover {
    transform: translateY(-2px);
    border-color: rgba(var(--link), 0.3);
    background: rgba(255, 255, 255, 0.9);
  }

  .link-text {
    font-weight: 500;
    font-size: 1.1rem;
  }

  .icon {
    color: currentColor;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    main {
      padding: 1.5rem;
    }

    .headshot {
      width: 200px;
      height: 200px;
    }

    .content {
      max-width: 100%;
    }
  }
</style>

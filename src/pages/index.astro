---
import Layout from "../layouts/Layout.astro";
// Import your image. Make sure the path is correct.
// For example, if 'anne-young-headshot.jpg' is in a folder named 'assets' inside 'src', it would be '../assets/anne-young-headshot.jpg'
import headshot from "../assets/anne2.jpg";
---

<Layout title="Anne Young">
  <main>
    <div class="content">
      <h1>Anne Young</h1>
      <div class="image-container">
        <img
          src={headshot.src}
          alt="Anne Young professional headshot"
          class="headshot"
        />
      </div>
      <nav class="links">
        <a href="https://anneofoxfordstreet.blogspot.com" class="link-item">
          <span class="link-text">Blog</span>
        </a>
        <a href="mailto:anneofoxfordstreet@gmail.com" class="link-item">
          <span class="link-text">Contact</span>
        </a>
      </nav>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .content {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    animation: fadeIn 0.8s ease-out;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 2rem;
    color: rgb(var(--accent));
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .image-container {
    margin-bottom: 3rem;
    display: inline-block;
  }

  .headshot {
    width: 240px;
    height: 240px;
    object-fit: cover;
    border-radius: 10px;
    filter: contrast(1.05);
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .link-item {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border: 1px solid rgba(var(--accent), 0.1);
    border-radius: 8px;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.5);
  }

  .link-item:hover {
    transform: translateY(-2px);
    border-color: rgba(var(--link), 0.3);
    background: rgba(255, 255, 255, 0.9);
  }

  .link-text {
    color: rgb(var(--link));
    font-weight: 500;
    font-size: 1.1rem;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    main {
      padding: 1.5rem;
    }

    .headshot {
      width: 200px;
      height: 200px;
    }

    .content {
      max-width: 100%;
    }
  }
</style>
